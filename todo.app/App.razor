@page "/"
@inherits ToDoBase






<h1 data-test-id="title-todo" class="title">To-Do App</h1>
<div class="todo">
    <button onke data-test-id="button-todo" class="btn-todo" @onclick="() => AddItem(TextValue)" type="submit">Add
        Item!</button>
    <input data-test-id="text-todo" class="txt-todo" type="text" @bind="TextValue" placeholder="Write something!">
</div>


@code {
    private string TextValue;

    


}

@if (Todos == null)
{
    <h1>Please Wait ...</h1>
}

else
{



    @foreach (var todo in Todos)
    {
        <div class="todo-list">

    <h3 data-test-id="label-title-todo-@randomNumber()" class="title-item"><label for="">@todo</label></h3>
    <button  data-test-id="button-Delete-todo-@randomNumber()" class="btn-Delete-todo" type="submit">Delete</button>
    <button  data-test-id="button-Edit-todo-@randomNumber()" class="btn-Edit-todo" type="submit">Edit</button>


</div>


    }

}
